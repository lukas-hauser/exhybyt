<% if @space.images.attached? %>
  <div class="card-columns">
    <% @space.images.each do |image| %>
      <div class="card text-right">
        <%= image_tag image, class:"card-img card-img-sm" %>
        <div class="card-body">
          <%= link_to delete_image_attachment_space_url(image.signed_id),
           method: :delete,
           class:"text-muted",
           data: { confirm: 'Are you sure?' },
           remote: true do %>
            <i class="fas fa-times"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
