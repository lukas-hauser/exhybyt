<% if @space.images.attached? %>
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <% if @space.images.count > 1 %>
      <ol class="carousel-indicators">
        <% i=0 %>
        <% @space.images.each do %>
          <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>" class="<%= 'active' if i == 0 %>"></li>
          <% i+=1 %>
        <% end %>
      </ol>

      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    <% end %>

    <div class="carousel-inner">
      <% i=0 %>
      <% @space.images.each do |image| %>
        <div class="carousel-item<%= ' active' if i == 0 %>">
          <%= image_tag image, class:"d-block w-100 carousel-full-height-image" %>
          <% i+=1 %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
