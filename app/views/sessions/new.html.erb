<% provide(:title, 'Log In') %>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
      <h1>Log In</h1>
      <div class="form-group">
        <%= f.email_field :email, placeholder: "Email", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
      </div>

      <p class="form-check">
        <%= f.check_box :remember_me, class:"form-check-input", id:"remember_me" %>
        <label class="form-check-label" for="remember_me">Remember me</label>
      </p>

      <%= f.submit "Log In", class: "btn btn-block btn-primary" %>
    <% end %>
    <p class="center"><%= link_to "Create Account", signup_path %> | <%= link_to "Forgot Password", new_password_reset_path %></p>

  </div>
</div>
