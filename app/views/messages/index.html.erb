<% provide(:title, 'Messages') %>

<div class="row">

	<aside class="col-md-4">
		<section class="user_info">
			<h1>
				<%= gravatar_for(@other, size: 80) %><br>
				<h1><%= @other.display_name %></h1>
				<span><%= link_to "View Profile", @other %></span>
			</h1>
		</section>
	</aside>

	<div class="col-md-6">
		<div class="card">
			<h5 class="card-header">
				Conversation with <%= @other.display_name %>
			</h5>
			<div class="card-body">
				<%= render 'message_form' %>
			</div>
		</div>

		<div class="card", id="chat" >
			<%= render @messages, locals: {conversation: @conversation} %>
		</div>
	</div>
</div>
