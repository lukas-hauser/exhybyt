<div class="row">

	<aside class="col-md-4">
		<section class="user_info">
			<h1>
				<%= gravatar_for(@other, size: 80) %><br>
				<h1><%= @other.display_name %></h1>
				<span><%= link_to "View Profile", @other %></span>
			</h1>
		</section>
	</aside>

	<div class="col-md-6">
		<div class="card">
			<h5 class="card-header">
				Conversation with <%= @other.display_name %>
			</h5>
			<div class="card-body">
				<div class="container">

					<%= form_with model: [@conversation, @conversation.messages.new], local: true do | f | %>

						<div class="form-group">
							<%= f.text_area :content, placeholder: "Add a personal message", class: "form-control" %>
						</div>
						<%= f.hidden_field :user_id, value: current_user.id %>

						<div class="actions">
							<%= f.submit "Send Message", class: "btn btn-primary" %>
						</div>
					<% end %>

				</div>
			</div>
		</div>

		<div class="card">
			<%= render @messages, locals: {conversation: @conversation} %>
		</div>

	</div>

</div>
