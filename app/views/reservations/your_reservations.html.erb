<% provide(:title, 'Your Resevations') %>

<div class="container-fluid">
  <div class="row">
    <%= render 'layouts/sidebar' %>
    <main class="col-md-9 ms-sm-auto">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
        <h1 class="h2">Your Reservations</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
        </div>
      </div>

      <div class="card-columns">
        <% @spaces.each do |space| %>
          <% space.reservations.each do |reservation| %>
            <div class="card">
              <% if reservation.artwork.images.attached? %>
                <%= link_to image_tag(reservation.artwork.images[0], class:"card-img"), reservation.space %>
              <% end %>
              <div class="card-body">
                <h5 class="card-title"><%= reservation.space.listing_name %></h5>
                <p class="card-text small">
                  Total Price: Â£ <%= reservation.total %><br>
                  <%= reservation.start_date.strftime("%d %b %Y") %> to <%= reservation.end_date.strftime("%d %b %Y") %><br>
                </p>
                <p class="card-text small">
                  <%= link_to gravatar_for(reservation.user, size: 25), reservation.user %>
                  <%= reservation.user.display_name %>
                </p>
                <% if current_user?(reservation.space.user) %>
                  <div class="btn-group">
                    <%= link_to "Approve", '#', class:"btn btn-sm btn-outline-secondary" %>
                    <%= link_to "Reject", '#', data: { confirm: "Are you sure?" }, class:"btn btn-sm btn-outline-secondary" %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </main>
  </div>
</div>
