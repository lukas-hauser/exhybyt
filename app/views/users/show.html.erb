<%= provide(:title, @user.display_name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.display_name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <section>
      <%= render 'follow_form' if logged_in? %>
      <%= render 'send_message' if logged_in? %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.spaces.any? %>
      <h3><%= pluralize(@user.spaces.count, "Space") %></h3>
      <div class="card-columns">
        <%= render @spaces %>
      </div>
      <%= will_paginate @spaces %>
      <br>
    <% end %>
    <% if @user.artworks.any? %>
      <h3><%= pluralize(@user.artworks.count, "Artwork") %></h3>
      <div class="card-columns">
        <%= render @artworks %>
      </div>
      <%= will_paginate @artworks %>
    <% end %>
  </div>
</div>
