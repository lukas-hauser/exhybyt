<%= provide(:title, @user.display_name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.display_name %>
      </h1>
      <ul class="list-unstyled text-small">
        <div class="container-center">
          <% if @user.instagram? %>
            <a href="https://www.instagram.com/<%= @user.instagram %>/"> <i class="fab fa-instagram text-muted"></i></a>
          <% end %>
          <% if @user.facebook? %>
            <a href="https://facebook.com/<%= @user.facebook %>"> <i class="fab fa-facebook-f text-muted"></i></a>
          <% end %>
          <% if @user.twitter? %>
            <a href="https://twitter.com/<%= @user.twitter %>"> <i class="fab fa-twitter text-muted"></i></a>
          <% end %>
          <% if @user.website? %>
            <a href="https://<%= @user.website %>"> <i class="fas fa-globe-europe text-muted"></i></a>
          <% end %>
        </div>
      </ul>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <section>
      <%= render 'follow_form' if logged_in? %>
      <%= render 'send_message' if logged_in? %>
      <% if current_user?(@user) %>
        <%= link_to "Edit Profile", edit_user_path(current_user), class:"btn btn-sm btn-outline-secondary" %>
      <% end %>
    </section>
    <%= @user.bio %>
  </aside>
  <div class="col-md-8">
    <% if @spaces.any? %>
      <h3><%= pluralize(@spaces.count, "Space") %></h3>
      <div class="card-columns">
        <%= render @spaces %>
      </div>
      <%= will_paginate @spaces %>
      <br>
    <% end %>
    <% if @artworks.any? %>
      <h3><%= pluralize(@artworks.count, "Artwork") %></h3>
      <div class="card-columns">
        <%= render @artworks %>
      </div>
      <%= will_paginate @artworks %>
    <% end %>
  </div>
</div>
