<div class="center jumbotron jumbotron-fluid" style="background-image: url(<%= asset_path('exhibition-background.jpg') %>); background-size: 100%;">
	<%= form_tag search_path, method: :get do %>
		<div class="container">
			<div class="row">
				<div class="col-md-4 offset-md-2">
					<div class="form-group">
						<%= text_field_tag :search, params[:search], placeholder: "Where do you want to exhibit?", class: "form-control" %>
					</div>
				</div>
				<div class="col-md-2">
					<div class="form-group">
						 <%= text_field_tag :start_date, params[:start_date], placeholder: "Start Date", class: "form-control" %>
					</div>
				</div>
				<div class="col-md-2">
					<div class="form-group">
						<%= text_field_tag :end_date, params[:end_date], placeholder: "End Date", class: "form-control" %>
					</div>
				</div>
			</div>
			<div class="col">
				<%= submit_tag "Search", class: "btn btn-primary" %>
			</div>
		</div>
	<% end %>
</div>
