<div class="center jumbotron jumbotron-fluid" style="background-image: url(<%= asset_path('exhibition-background.jpg') %>); background-size: 100%;">
	<%= form_tag search_path, method: :get do %>
		<div class="container">
			<div class="row">
				<div class="col-md-4 offset-md-2">
					<div class="form-group">
						<%= text_field_tag :search, params[:search], placeholder: "Where do you want to exhibit?", class: "form-control shadow", id:"search_term" %>
					</div>
				</div>
				<div class="col-md-2">
					<div class="form-group">
						 <%= text_field_tag :start_date, params[:start_date], placeholder: "Start Date", class: "form-control shadow" %>
					</div>
				</div>
				<div class="col-md-2">
					<div class="form-group">
						<%= text_field_tag :end_date, params[:end_date], placeholder: "End Date", class: "form-control shadow" %>
					</div>
				</div>
			</div>
			<div class="col">
				<%= submit_tag "Search", class: "btn btn-primary shadow" %>
			</div>
		</div>
	<% end %>
</div>

<script async
    src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GMAPS_API_KEY'] %>&libraries=places&callback=activatePlacesSearch">
</script>

<script>
	function activatePlacesSearch(){
		var text_field_tag = document.getElementById('search_term');
		var autocomplete = new google.maps.places.Autocomplete(text_field_tag);
	}
</script>
