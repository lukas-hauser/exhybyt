<% if @reviews.any? %>
  <ul class="list-group list-group-flush">
    <% @reviews.each do |r| %>
      <li class="list-group-item">
        <div class="row">
          <div class="col lg-3">
            <%= gravatar_for(r.user, size: 30) %>
            <strong><%= r.user.display_name %></strong>
          </div>
          <div class="col lg-3">
            <div id="stars_<%= r.id %>"></div>
          </div>
          <div class="col lg-3">
            <%= r.review_time %>
          </div>
          <div class="col lg-3">
            <%= link_to "Remove my review", r, method: :delete, data: { confirm: "Are you sure?"} if current_user && current_user == r.user %>
          </div>
        </div>
        <div class="row-space-2">
          <%= r.comment %>
        </div>
      </li>

      <script>
        $('#stars_<%= r.id %>').raty({
          path: '/assets',
          readOnly: true,
          score: <%= r.star %>
        })
      </script>

    <% end %>
  </ul>
<% else %>
  <div class="text-center">
    There is no review yet.
  </div>
<% end %>
