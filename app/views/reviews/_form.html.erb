<%= form_with model: [@space, @space.reviews.new], local: true do | f | %>

  <div class="form-group">
    <%= f.text_field :star, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.text_field :comment, class: "form-control", required: true %>
  </div>

  <%= f.hidden_field :space_id, value: @space.id %>
  <%= f.submit "Submit", class: "btn btn-block btn-primary" %>

<% end %>
