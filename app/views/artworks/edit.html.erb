<% provide(:title, 'Edit Artwork') %>

<div class="row">
  <div class="col-md-6 offset-md-3">
      <%= render 'form' %>
      <hr class="my-4">
      <% if @artwork.images.attached? %>
        <div class="card-columns">
          <% @artwork.images.each do |image| %>
            <div class="card">
              <%= image_tag image, class:"card-img" %>
              <div class="card-body">
                <%= link_to "Remove", "#" %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
  </div>
</div>
