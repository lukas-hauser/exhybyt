<div class="card">
  <% if artwork.images.attached? %>
    <%= link_to image_tag(artwork.images[0], class:"card-img"), artwork %>
  <% end %>
  <div class="card-body">
    <h5 class="card-title"><%= artwork.listing_name %></h5>
    <p class="card-text"><%= artwork.category %></p>
    <p class="card-text small">
      <% if !artwork.price.nil? %>
        Price: <%= artwork.user.currency.upcase %> <%= artwork.price %><br>
      <% end %>
      <%= artwork.category %><br>
      <%= artwork.width %> x <%= artwork.height %> cm<br>
      <small class="text-muted"><%= link_to artwork.user.display_name, artwork.user, class:"text-muted" %></small>
    </p>
    <% if current_user?(artwork.user) %>
      <div class="btn-group">
        <%= link_to "Edit", edit_artwork_path(artwork), class:"btn btn-sm btn-outline-secondary" %>
        <%= link_to "Delete", artwork, method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-sm btn-outline-secondary" %>
      </div>
    <% end %>
  </div>
</div>
